model User {
  id       String @id @default(cuid())
  email    String @unique @default("")
  name     String @default("")
  password String
}

model Post {
  id       String  @id @default(cuid())
  title    String  @default("")
  slug     String  @unique @default("")
  content  String  @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")
  resume   Resume? @relation("Post_resume", fields: [resumeId], references: [id])
  resumeId String? @map("resume")

  @@index([resumeId])
}

model Resume {
  id               String       @id @default(cuid())
  experiences      Experience[] @relation("Resume_experiences")
  from_Post_resume Post[]       @relation("Post_resume")
}

model Experience {
  id                      String    @id @default(cuid())
  year                    Int?
  role                    String    @default("")
  employer                Employer? @relation("Experience_employer", fields: [employerId], references: [id])
  employerId              String?   @map("employer")
  skills                  Skill[]   @relation("Experience_skills")
  from_Resume_experiences Resume[]  @relation("Resume_experiences")

  @@index([employerId])
}

model Employer {
  id                       String       @id @default(cuid())
  name                     String       @default("")
  url                      String       @default("")
  description              String       @default("")
  from_Experience_employer Experience[] @relation("Experience_employer")
}

model Skill {
  id                     String       @id @default(cuid())
  name                   String       @default("")
  from_Experience_skills Experience[] @relation("Experience_skills")
}